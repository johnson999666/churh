  <style>
    /* Header styles */
    header {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 50px; /* set your desired height */
      z-index: 999;
      background-color: rgb(124, 181, 181);
      box-shadow: 0px 1px 5px rgba(0, 0, 0, 0.2);
    }
  
    /* Navbar styles */
    nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
      height: 100%;
      padding: 0 20px;
    }
  
    ul {
      list-style: none;
      margin: 0;
      padding: 0;
    }
  
    /* Links styles */
    li {
      display: inline-block;
    }
  
    li > a {
      display: block;
      font-weight: bold;
      font-size: 18px;
      color: #000;
      text-decoration: none;
      padding: 10px 20px;
    }
  
    li > a:hover {
      color: #007bff;
    }
  
    /* Dropdown menu styles */
    ul ul {
      position: absolute;
      top: 100%;
      left: 0;
      display: none;
      background-color: rgb(124, 181, 181);
      box-shadow: 0px 1px 5px rgba(0, 0, 0, 0.2);
    }
  
    ul ul li {
      display: block;
    }
  
    ul li:hover > ul {
      display: block;
    }
  </style>
  