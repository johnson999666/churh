<script>
 const form = document.querySelector("#weather-form");
const input = document.querySelector("#city");
const suggestionList = document.querySelector("#suggestion-list");
const weatherInfo = document.querySelector("#weather-info");

const apiKey = "c740b141159dc93d62c32a163b009d37";

form.addEventListener("submit", (e) => {
e.preventDefault();
const city = input.value.trim(); // declare the city variable
const url = `https://api.openweathermap.org/data/2.5/weather?q=${city}&appid=${apiKey}&units=metric`;

fetch(url)
  .then((response) => response.json())
  .then((data) => {
    const cityName = data.name;
    const weatherDescription = data.weather[0].description;
    const temperature = data.main.temp;

    const resultHtml = `
      <p>The current temperature in ${cityName} is ${temperature} degrees Celsius, with ${weatherDescription}.</p>
    `;

    weatherInfo.innerHTML = resultHtml;
  })
  .catch((error) => {
    console.error("Error fetching weather data:", error);
    weatherInfo.innerHTML = "<p>Error fetching weather data. Please try again.</p>";
  });
});


</script>






