    <form id="weather-form" autocomplete="off" style="padding: 10px;">
      <input type="text" id="city" name="city" placeholder="Enter a city name" style="margin-right: 5px;">
      <button type="submit" style="background-color: rgb(124, 181, 181); color: white; padding: 5px 10px; border: none; border-radius: 5px;">Get Weather</button>
    </form>
    <ul id="suggestion-list"></ul>
    <div id="weather-info"></div>
  </div>
